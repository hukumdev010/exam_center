{
  "name": "exam_center_backend",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "source venv/bin/activate && python -m uvicorn main:app --reload --host 0.0.0.0 --port 8000",
    "start": "source venv/bin/activate && python -m uvicorn main:app --host 0.0.0.0 --port 8000",
    "build": "echo 'Backend build step - install dependencies'",
    "pip:install": "pip install -r requirements.txt",
    "db:migrate": "prisma migrate dev --schema=prisma/schema.prisma",
    "db:generate": "prisma generate --schema=prisma/schema.prisma",
    "db:seed": "tsx prisma/seed.ts",
    "db:push": "prisma db push --schema=prisma/schema.prisma",
    "db:studio": "prisma studio --schema=prisma/schema.prisma"
  },
  "dependencies": {
    "@prisma/client": "^6.14.0"
  },
  "devDependencies": {
    "@types/node": "^20",
    "prisma": "^6.14.0",
    "tsx": "^4.19.1",
    "typescript": "^5"
  }
}
